{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for Express backend server in TypeScript.",
  "main": "src/server.ts",
  "repository": "https://github.com/skb1129/express-boilerplate",
  "scripts": {
    "build": "tsc",
    "coverage": "jest --runInBand --coverage",
    "dev": "ts-node src/server.ts",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "test": "jest --runInBand",
    "clean-docs": "rm -r -v docs; mkdir docs",
    "pregenerate-docs": "npm run build; npm run clean-docs",
    "generate-docs": "jsdoc --verbose -c jsdoc.config.js"
  },
  "author": "Surya Kant Bansal <suryakantbansal97@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.9",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/mongoose": "^5.7.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "jsdoc": "^3.6.6",
    "lint-staged": "^10.4.0",
    "minami": "^1.2.3",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "eslint .",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
